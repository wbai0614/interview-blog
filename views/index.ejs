<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Interview Blog</title>
  <link rel="stylesheet" href="/styles.css" />
</head>

<body>

  <!-- =========================
       Hero / Navbar
  ========================== -->
  <header class="navbar">
    <h1>Interview Blog</h1>
    <p>
      Clean, concise notes for coding, SQL, system design,
      and engineering interviews.
    </p>
  </header>

  <!-- =========================
       Main Content
  ========================== -->
  <main class="container">

    <!-- Search -->
    <form class="search" method="GET" action="/">
      <input
        type="text"
        name="q"
        placeholder="Search topics (Python, SQL, System Design...)"
        value="<%= q || '' %>"
        autocomplete="off"
      />
    </form>

    <!-- Tags -->
    <div class="tags">
      <% tags.forEach(tag => { %>
        <a class="pill" href="/?tag=<%= tag %>"><%= tag %></a>
      <% }) %>
    </div>

    <!-- Featured Posts -->
    <% if (featured.length) { %>
      <section>
        <h2>Featured</h2>
        <div class="grid">
          <% featured.forEach(post => { %>
            <article class="card featured">
              <a href="/post/<%= post.slug %>">
                <h3><%= post.title %></h3>
                <p><%= post.description %></p>
                <small><%= post.readTime %> min read</small>
              </a>
            </article>
          <% }) %>
        </div>
      </section>
    <% } %>

    <!-- All Posts -->
    <section>
      <h2>All Posts</h2>

      <% if (!posts.length) { %>
        <p>No posts found.</p>
      <% } %>

      <div class="grid">
        <% posts.forEach(post => { %>
          <article class="card">
            <a href="/post/<%= post.slug %>">
              <h3><%= post.title %></h3>
              <p><%= post.description %></p>
              <small><%= post.readTime %> min read</small>
            </a>
          </article>
        <% }) %>
      </div>
    </section>

  </main>

  <!-- =========================
       Footer
  ========================== -->
  <footer>
    Â© 2025 Interview Blog
  </footer>

</body>
</html>
