<!DOCTYPE html>
<html>
<head>
  <title>Interview Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>

<header class="navbar">
  <h1>Interview Blog</h1>
  <p>Concise notes for coding, SQL, and system design interviews</p>
</header>

<div class="container">

  <!-- Search -->
  <form class="search">
    <input name="q" value="<%= q || '' %>" placeholder="Search topics..." />
  </form>

  <!-- Tags -->
  <div class="tags">
    <% tags.forEach(t => { %>
      <a class="pill" href="/?tag=<%= t %>"><%= t %></a>
    <% }) %>
  </div>

  <!-- Featured -->
  <% if (featured.length) { %>
    <h2>Featured</h2>
    <div class="grid">
      <% featured.forEach(p => { %>
        <div class="card featured">
          <a href="/post/<%= p.slug %>">
            <h3><%= p.title %></h3>
            <p><%= p.description %></p>
            <small><%= p.readTime %> min read</small>
          </a>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- Posts -->
  <h2>All Posts</h2>
  <div class="grid">
    <% if (!posts.length) { %>
      <p>No posts found.</p>
    <% } %>

    <% posts.forEach(p => { %>
      <div class="card">
        <a href="/post/<%= p.slug %>">
          <h3><%= p.title %></h3>
          <p><%= p.description %></p>
          <small><%= p.readTime %> min read</small>
        </a>
      </div>
    <% }) %>
  </div>

</div>

<footer>Â© 2025 Interview Blog</footer>
</body>
</html>
